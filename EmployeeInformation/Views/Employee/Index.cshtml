@model IEnumerable<EmployeeInformation.Models.Employee_Details>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h1>Employee Details</h1>
            <a class="btn btn-sm btn-success m-2" asp-controller="Employee" asp-action="Create">Create</a>
            <table class="table table-bordered table-primary">
                <tr class="text-center">
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Gender</th>
                    <th>DOB</th>
                    <th>Age</th>
                    <th>Address</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                @foreach(var d in Model)
                {
                    <tr class="text-center">
                        <td>@d.Id</td>
                        <td>@d.FirstName</td>
                        <td>@d.LastName</td>
                        <td>@d.Gender</td>
                        <td>@d.DOB.ToString("dd/MM/yyyy")</td>
                        <td>@d.Age</td>
                        <td>@d.Address</td>
                        <td><a class="btn btn-sm btn-warning" asp-controller="Employee" asp-action="Edit" asp-route-id="@d.Id">Edit</a></td>
                        <td><a class="btn btn-sm btn-primary" asp-controller="Employee" asp-action="Delete" asp-route-id="@d.Id">Delete</a></td>
                        
                    </tr>

                }
            </table>
        </div>

    </div>


</div>

